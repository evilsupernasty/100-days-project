<section class="section has-background-white-ter">
  <div class="container">
    <div class="box content">
      <h1>Edit Project</h1>
      <%= render partial: "shared/form_errors_notification", locals: {resource: @project} %>
      <%= form_with model: @project, local: true do |f| %>
      <div class="field">
        <%= f.label :title, class: "label" %>
        <div class="control">
          <%= f.text_field :title, class: "input" %>
        </div>
        <%= help_error_message @project, :title %>
      </div>
      <div class="field">
        <%= f.label :summary, class: "label" %>
        <div class="control">
          <%= f.text_area :summary, class: "input" %>
        </div>
        <%= help_error_message @project, :summary %>
      </div>
      <div class="field">
        <%= f.label :start_date, class: "label" %>
        <div class="control">
          <%= f.date_field :start_date, class: "input", value: Date.current.to_s(:db) %>
        </div>
        <%= help_error_message @project, :start_date %>
      </div>
      <div class="actions">
        <%= f.submit "Update project", class: "button is-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</section>
