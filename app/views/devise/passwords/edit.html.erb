<section class="section has-background-white-ter">
  <div class="container">
    <div class="columns">
      <div class="column is-half-desktop is-offset-one-quarter-desktop is-one-third-widescreen is-offset-one-third-widescreen">
        <div class="box content">
          <h2>Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render partial: "shared/form_errors_notification", locals: {resource: resource} %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "New password", class: "label" %>
              <% if @minimum_password_length %>
                <small>(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
              <div class="control">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
              <div class="control">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class: "button is-primary" %>
            </div>
          <% end %>
          <hr>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>

