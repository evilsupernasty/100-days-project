<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half-desktop is-offset-one-quarter-desktop is-one-third-widescreen is-offset-one-third-widescreen">
        <div class="box">
          <h2>Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class: "label" %>
              <div class="content">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :password, class: "label" %>
              <div class="control">
                <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: "button" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>

